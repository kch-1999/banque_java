<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.appbanquee.LoginController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label text="Bienvenue dans votre Application Bancaire" textAlignment="CENTER">
        <font>
            <Font name="System Bold" size="18.0" />
        </font>
    </Label>
    
    <GridPane hgap="10" vgap="10" alignment="CENTER">
        <Label text="Numéro de compte:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <TextField fx:id="numeroCompteField" GridPane.columnIndex="1" GridPane.rowIndex="0" />
        
        <Label text="Nom:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <TextField fx:id="nomField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
    </GridPane>
    
    <HBox spacing="10" alignment="CENTER">
        <Button text="Connexion" onAction="#onLoginButtonClick" />
        <Button text="Créer un compte" onAction="#onCreateAccountButtonClick" />
    </HBox>
    
    <Label fx:id="messageLabel" textFill="RED" />
</VBox>